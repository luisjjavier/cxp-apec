@model ApecAxP.Models.Provider

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del proveedor @Html.DisplayFor(model => model.Name)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Identification)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Identification)
        </dd>
